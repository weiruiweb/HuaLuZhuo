/**index.wxss**/

@import "../../wxParse/wxParse.wxss"; 

page{
	width:100%;
	min-height:100%;
}
view{
	font-size:26rpx;
	color:#666;
}
.phone_note{
	margin-top:28rpx;
	
	line-height:38rpx;
}
.phone_infor{
	margin-top:45rpx;
}
.input_before{
	width:29%;
	height:60rpx;
	line-height:60rpx;
	overflow:hidden;
	font-size:28rpx;
	color:#333;	
}
.bank_card{
	width:100%;
	margin-top:38rpx;
}
.bank_card input{
	width:71%;
	padding:0 2%;
	border:solid 1px #ed7101;
	height:60rpx;
	line-height:60rpx;
	font-size:26rpx;
	border-radius:10rpx;
}
.up_icon{
	width:18rpx;
	height:60rpx;
	float:right;
}
.up_icon image{
	width:17rpx;
	height:10rpx;
}
.adreess_input{
	width:71%;
	padding:0 2%;
	border:solid 1px #ed7101;
	height:60rpx;
	line-height:60rpx;
	border-radius:10rpx;
}
.adreess_textarea{
	width:75%;
}
.adreess_textarea textarea{
	width:96%;
	height:120rpx;
	border:solid 1px #ed7101;
	border-radius:10rpx;
	padding:2%;
}
.input_left{
	width:180rpx;
}
.confirm_bind{
	width:100%;
	height:84rpx;
	background:#ed7101;
	line-height:84rpx;
	font-size:30rpx;
	color:#fff;
	text-align:center;
	position:fixed;
	bottom:0;
}