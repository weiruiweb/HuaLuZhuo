view{
	color:#666;
}
.w710{
	align-items:center;
	display:flex;
}
.sum_txt{
	height:90rpx;
	align-items:center;
	width:100%;
	display:flex;
	border-bottom:solid 1px #e0e0e0;
}
.sumTxt{
	height:40rpx;
	padding-left:20rpx;
	font-size:28rpx;
	color:#333;
	font-weight:bold;
	border-left:solid 4rpx #ed7101;
}
.pencil{
	font-size:22rpx;
	color:#666;
}
.job{
	align-items:center;
	display:flex;
	height:300rpx;
	border-bottom:solid 1px #d9d9d9;
}
.job_list{
	height:260rpx;
	width:100%;
}
.list_left{
	width:100%;
	height:260rpx;
}
.list_right{
	width:30%;
	height:260rpx;
	text-align:right;
}
.job_type{
	height:24%;
	font-size:30rpx;
	color:#333;
	align-items:center;
	display:flex;
}
.treatment{
	height:30%;
}
.job_company{
	height:58%;
	width:100%;
	display:flex;

}
.treatment_sort{
	width:100rpx;
	height:34rpx;
	background:#f6f6f6;
	text-align:center;
	line-height:34rpx;
	margin-right:10rpx;
