@import "../../wxParse/wxParse.wxss"; 

page{
	width:100%;
	min-height:100%;
}
.banner{
	height:372rpx;
	width:100%;
	overflow:hidden;
}
.banner image{
	width:100%;
	height:372rpx;
}
.make_tlt{
	height:60rpx;
	margin-top:40rpx;
}
.make_tlt image{
	width:30rpx;
	height:30rpx;
	margin-right:20rpx;
}
.tlt_txt{
	font-size:26rpx;
	color:#ed7101;
}
.make_detail{
	width:100%;
	background:#f5f1e5;
}
.make_in{
	
	border-radius:0 0 20rpx 0;
	width:100%;
}
.makein_tlt{
	height:45rpx;
}
.makein_tlt image{
	width:45rpx;
	height:45rpx;
	margin-right:20rpx;
