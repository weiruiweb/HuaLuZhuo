	width:26rpx;
	height:26rpx;
	border-radius:50%;
	background:#ed7101;
	font-size:24rpx;
	color:#fff;
	line-height:26rpx;
	text-align:center;
	margin-left:30rpx;
	margin-right:20rpx;
}
.make_list {
	margin-top:10rpx;
}
.submit_info button{
	background:#ed7101;
	border:none;
